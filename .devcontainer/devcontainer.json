{
    "name": "template-python-project",
    "build": {
        "dockerfile": "DockerfileGPU",
        "args": {
            "PYTHON_VERSION": "3.11.10",
            "CUDA": "12.1.0",
            "CUDNN": "cudnn8",
            "UBUNTU_VERSION": "22.04"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "adpyke.codesnap",
                "analytic-signal.preview-mp4",
                "anseki.vscode-color",
                "cweijan.vscode-office",
                "esbenp.prettier-vscode",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "Gruntfuggly.todo-tree",
                "hancel.markdown-image",
                "hbenl.vscode-test-explorer",
                "IronGeek.vscode-env",
                "KevinRose.vsc-python-indent",
                "maciejdems.add-to-gitignore",
                "magicstack.MagicPython",
                "magson.material-dark-color-theme",
                "mhutchie.git-graph",
                "unifiedjs.vscode-remark",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-vsliveshare.vsliveshare",
                "naumovs.color-highlight",
                "njpwerner.autodocstring",
                "PKief.markdown-checkbox",
                "PKief.material-icon-theme",
                "Postman.postman-for-vscode",
                "quicktype.quicktype",
                "ritwickdey.LiveServer",
                "ruiquelhas.vscode-lowercase",
                "Shinotatwu-DS.file-tree-generator",
                "sleistner.vscode-fileutils",
                "streetsidesoftware.code-spell-checker",
                "swyphcosmo.spellchecker",
                "TakumiI.markdowntable",
                "tomoki1207.pdf",
                "tonybaloney.vscode-pets",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode",
                "be5invis.toml",
                "wix.vscode-import-cost",
                "yzane.markdown-pdf"
            ],
        },
    },
    "features": {
        "azure-cli": "latest"
    },
    "runArgs": [
        "--gpus",
        "all",
        "--name",
        "template-python-project_devcontainer"
    ],
    "postStartCommand": "poetry config virtualenvs.create true && poetry config virtualenvs.in-project true && poetry install --with cleaning,utils,gpu  && bash .devcontainer/utils/create_links.bash"
}